!!! 5
%html{:lang => "en"}
  %head
    %title Git
    %meta{:charset => "utf-8"}    
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    = stylesheet_link_tag "git-scm.css" 
    /[if (lte IE 7)]
      = stylesheet_link_tag "ie7.css"
    = javascript_include_tag "modernizr.js"
    /[if (gte IE 6)&(lte IE 8)]
      = javascript_include_tag "selectivizr-min.js"
    = javascript_include_tag "http://use.typekit.com/lmc6xsg.js"
    :javascript
      try{Typekit.load();}catch(e){}
    
  %body{:id => @page}
    %div#wrapper
      = partial 'shared/header'

      %div#content-wrapper
        %aside
          %nav
            %ul
              %li= link_to "About"
              %li
                =link_to "Documentation", "#", {:class => 'active'}
                %ul 
                  %li= link_to "Reference", "#", {:class => 'active'}
                  %li= link_to "Book"
                  %li= link_to "Videos"
                  %li= link_to "External Links"
              %li= link_to "Downloads"
              %li= link_to "Community"

          - if content_for(:sidebar)
            %hr.sidebar
            = yield_content :sidebar

        %div#content
          =yield

      = partial 'shared/footer'